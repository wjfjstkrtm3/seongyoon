<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<typeAliases>
		<typeAlias type="com.joker.member.db.MemberDTO" alias="memberDTO" />
		<typeAlias type="com.joker.board.db.BoardDTO" alias="boardDTO" />
		<typeAlias type="com.joker.reply.db.ReplyDTO" alias="replyDTO" />
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver" />
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe" />
				<property name="username" value="scott" />
				<property name="password" value="tiger" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<mapper resource="member.xml" />
		<mapper resource="board.xml" />
		<mapper resource="reply.xml" />
	</mappers>
</configuration>